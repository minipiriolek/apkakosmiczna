<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:apkakosmiczna.ViewModels"
        xmlns:viewModels="clr-namespace:apkakosmiczna.ViewModels"
        x:Class="apkakosmiczna.Views.MainWindow"
        Title="Filmy"
        x:DataType="viewModels:MainWindowViewModel">

    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>

    <StackPanel>
        <TextBlock Text="Filmy:" FontWeight="Bold" Margin="0,0,0,5"/>
        <ListBox x:Name="FilmsList"
                 ItemsSource="{Binding Films}"
                 SelectionChanged="FilmsList_SelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="{Binding Title}" FontWeight="Bold"/>
                        <TextBlock Text="(" />
                        <TextBlock Text="{Binding Genre}" />
                        <TextBlock Text=")" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </StackPanel>
</Window>